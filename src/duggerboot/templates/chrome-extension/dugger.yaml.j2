# DuggerLinkTools Project Configuration
# Generated by DuggerBootTools for Chrome Extension

project:
  name: "{{ project_name }}"
  version: "0.1.0"
  description: "{{ project_name }} - Chrome Extension with DLT DNA validation"
  template_type: "chrome-extension"
  created_at: "{{ ansible_date_time.iso8601 if ansible_date_time is defined else 'TBD' }}"
  
metadata:
  author: "PyPro"
  email: "pypro@dugger.com"
  license: "MIT"
  language: "javascript"
  
dependencies:
  core:
    - "duggerlink-tools"
  dev:
    - "webpack"
    - "webpack-cli"
    - "copy-webpack-plugin"
    - "eslint"
    - "prettier"
    - "jest"
  
structure:
  src_dir: "src"
  tests_dir: "tests"
  docs_dir: "docs"
  
chrome:
  manifest_version: 3
  permissions:
    minimal: ["storage", "activeTab"]
    optional: ["scripting", "tabs"]
  host_permissions: ["https://*/*"]
  
git:
  auto_init: true
  initial_commit_message: "chore: bootstrap {{ project_name }} Chrome extension"
  
quality:
  linter: "eslint"
  formatter: "prettier"
  test_runner: "jest"
  
ide_sync:
  enabled: true
  chrome_devtools: true
  javascript_support: true